                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Bordered Table</h6>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Track ID</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Ordered On</th>
                                        <th scope="col">Updated on</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Order Status</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                            
                                    <% if (orders.length > 0) {%>
                                        <% orders.reverse(); %>
                                       <% for (let i = 0; i < orders.length; i++) { %>
                                            <tr>
                                                <td class="order-id">
                                                    <%= orders[i].trackID %>
                                                </td>
                                                <td>
                                                    ₹<%= orders[i].totalAmount %>
                                                </td>
                                                <td>
                                                    <%= orders[i].orderDate.toLocaleString() %>
                                                </td>
                                                <td>
                                                    <%= orders[i].updatedAt.toLocaleString() %>
                                                </td>
                                                <td>
                                                    <a href="/admin/manage-prodcuts?id=<%=orders[i]._id%>">
                                                        <button class="btn btn-primary" type="button">Manage</button>
                                                    </a>
                                                </td>
                                                <td>
                                                    <select name="orderStatus" data-id="<%=orders[i]._id%>" style="background-color: #191C24 !important; color: white; border-radius: 6%;" class="status-select">
                                                        <% const orderStatusOptions = ['ordered', 'shipped', 'out for delivery', 'delivered']; %>
                                                        <% for (const option of orderStatusOptions) { %>
                                                            <option value="<%= option %>" <%= option === orders[i].orderStatus ? 'selected' : '' %>><%= option %></option>
                                                        <% } %>
                                                    </select>                                                    
                                                </td>
                                            </tr>
                                        <% } } else { %>
                                            <tr>
                                                <td colspan="6" class="text-center text-primary pt-5 pb-5">
                                                    <h3>No ordered products found.</h3>
                                                </td>
                                            </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
