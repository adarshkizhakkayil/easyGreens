    <script>

        document.getElementById('viewSalesreport').addEventListener('click', () => {
            let startdate = document.getElementById('startDate').value;
            let endDate = document.getElementById('endDate').value;
            fetch('/admin/getSalesData', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    startdate, endDate
                })
            }).then(response => {
                return response.json()
            }).then(data => {
                
                if (data) {
                    const { value, StringSalesData } = data

                    if (value == 1) {
                        Swal.fire({
                            icon: 'error',
                            title: "please select date !!",
                            showConfirmButton: false,
                            showClass: {
                                popup: `
                              animate__animated
                             animate__fadeInUp
                          animate__faster   
                             `
                            },
                            hideClass: {
                                popup: `
                                 animate__animated
                                 animate__fadeOutDown
                                 animate__faster
                                    `
                            }
                        });
                    } else {
                        
                        let table = document.getElementById('dataTable');
                        let tbody = table.querySelector('tbody');
                        tbody.innerHTML = "";
                        // Assuming StringSalesData is an array of objects
                        StringSalesData.forEach(order => {
                            let row = tbody.insertRow();
                            row.insertCell(0).textContent = order.id;
                            row.insertCell(1).textContent = order.customerID;
                            row.insertCell(2).textContent = order.orderStatus;
                            row.insertCell(3).textContent = `₹${order.totalAmount}`;
                            row.insertCell(4).textContent = order.paymentMethod;
                            row.insertCell(5).textContent = order.orderDate;
                            row.insertCell(6).textContent = order.updateAt;
                        });

                        // Show the table if it was hidden
                        table.style.display = 'block';

                    }
                }
            }).catch(error => {
                console.log(error);
            })
        })

        

        document.getElementById('DownloadSalesreport').addEventListener('click', async () => {

            let startdate = document.getElementById('startDate').value;
            let endDate = document.getElementById('endDate').value;
            fetch('/admin/getSalesData', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    startdate, endDate
                })
            }).then(response => {
                return response.json()
            }).then(async data => {
                if (data) {
                    const { value, StringSalesData } = data

                    if (value == 1) {
                        Swal.fire({
                            icon: 'error',
                            title: "please select date !!",
                            showConfirmButton: false,
                            showClass: {
                                popup: `
                              animate__animated
                             animate__fadeInUp
                          animate__faster   
                             `
                            },
                            hideClass: {
                                popup: `
                                 animate__animated
                                 animate__fadeOutDown
                                 animate__faster
                                    `
                            }
                        });
                    } else {
                        let table = document.getElementById('dataTable');
                        let tbody = table.querySelector('tbody');
                        tbody.innerHTML = ""; // Clear existing rows
                        // Assuming StringSalesData is an array of objects
                        StringSalesData.forEach(order => {
                            let row = tbody.insertRow();
                            row.insertCell(0).textContent = order.id;
                            row.insertCell(1).textContent = order.customerID;
                            row.insertCell(2).textContent = order.orderStatus;
                            row.insertCell(3).textContent = `₹${order.totalAmount}`;
                            row.insertCell(4).textContent = order.paymentMethod;
                            row.insertCell(5).textContent = order.orderDate;
                            row.insertCell(6).textContent = order.updateAt;
                        });

                        const inputOptions = new Promise((resolve) => {
                            setTimeout(() => {
                                resolve({
                                    "Excel": "Excel",
                                    "pdf": "pdf",
                                    "Both": "Both"
                                });
                            }, 1000);
                        });
                        const { value: type } = await Swal.fire({
                            title: "Select type",
                            input: "radio",
                            inputOptions,
                            inputValidator: (value) => {
                                if (!value) {
                                    return "You need to choose something!";
                                }
                            }
                        });
                        if (type) {
                            if (type == 'Excel') {
                                downloadAsExcel()
                            } else if (type == 'pdf') {
                                downloadAsPDF()
                            } else {
                                downloadAsExcel()
                                downloadAsPDF()
                            }
                        }

                    }
                }
            }).catch(error => {
                console.log(error);
            })


        })



        function downloadAsExcel() {
            let table = document.getElementById('dataTable');
            let ws = XLSX.utils.table_to_sheet(table);
            let wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sales Data');
            XLSX.writeFile(wb, 'sales_data.xlsx');
        }

        function downloadAsPDF() {
            window.jsPDF = window.jspdf.jsPDF;
            let table = document.getElementById('dataTable');
            let pdf = new jsPDF();
            pdf.autoTable({ html: '#dataTable' });
            pdf.save('sales_data.pdf');
        }


