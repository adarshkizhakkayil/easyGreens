    <script>
$(document).ready(function() {
    $('.block-button').on('click', function() {
        var button = $(this);
        var userId = button.data('user-id');
        var currentState = button.data('state');

        // Make AJAX request to update user status
        $.ajax({
            type: 'POST',
            url: currentState === 'Blocked' ? '/admin/changeUserStatus' : '/admin/unblockUser',
            data: { userId: userId },
            success: function(response) {
                // Update button text and style based on the new state
                if (currentState === 'Blocked') {
                    button.text('Unblock');
                    button.removeClass('btn-danger').addClass('btn-success');
                    button.data('state', 'UnBlocked');
                } else {
                    button.text('Block');
                    button.removeClass('btn-success').addClass('btn-danger');
                    button.data('state', 'Blocked');                                                                                                                                  
                }
            },
            error: function(error) {
                console.error(error);
                // Handle error, e.g., show an alert
            }
        });
    });
});
</script>



