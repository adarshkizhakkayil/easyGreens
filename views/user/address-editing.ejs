                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="city">City</label>
                                                <input type="text" class="form-control" id="city" name="city"
                                                    style="background-color: #f3f2ee;" placeholder="Enter city" required
                                                    value="<%= userAddress.town %>">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="state">State</label>
                                                <input type="text" class="form-control" id="state" name="state"
                                                    style="background-color: #f3f2ee;" placeholder="Enter state" required
                                                    value="<%= userAddress.state %>">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="zip">Zip Code</label>
                                                <input type="number" minlength="1" maxlength="6" class="form-control" name="zipcode"
                                                    style="background-color: #f3f2ee;" id="zip" placeholder="Enter zip code"
                                                    required value="<%= userAddress.zipcode %>">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="country">Country</label> 
                                                <input type="text" class="form-control" id="country" name="country"
                                                    style="background-color: #f3f2ee;" placeholder="Enter country" required
                                                    value="<%= userAddress.country %>">
                                            </div>
                                        </div>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="useAddress_<%= index %>" 
                                                name="useAddress" value="<%= index %>"
                                                onclick="handleCheckboxClick(this, '<%= userAddress._id %>')">
                                            <label class="form-check-label text-danger" for="useAddress_<%= index %>">Use this
                                                address</label>
                                        </div>
                                        <button type="submit" class="mt-2 btn btn-dark">Edit</button>
                                    </form>
