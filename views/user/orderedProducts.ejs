    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container mt-5">
            <h6 class="pr-5 checkout__title">Order History</h6>
            <div class="shopping__cart__table">
                <table class="shopping__cart__table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Images</th>
                            <th>Product Name</th>
                            <th>Ordered on</th>
                            <th>status</th>
                            <th>Total</th>
                            <th>Method</th>
                            <th>Manage</th>
                        </tr>
                    </thead>

                    <% if (typeof orderedProducts !== 'undefined' && orderedProducts.length > 0) { %>
                        <tbody>
                            <% orderedProducts.forEach(order => { %>
                                <tr>
                                    <td>
                                        <% order.items.slice(0, 3).forEach(item => { %>
                                            <% if (item.productID && item.productID.image && item.productID.image[0]) { %>
                                                <img src="/uploads/<%= item.productID.image[0] %>"
                                                    class="img-fluid mb-2"
                                                    alt="<%= item.productID.productName %>"
                                                    style="width: 80px; height: 80px; object-fit: cover; border-radius: 5%;">
                                            <% } %>
                                        <% }); %>
                                    </td>
                                    <td class="product__cart__item__text">
                                        <% order.items.slice(0, 3).forEach(item => { %>
                                            <% if (item.productID && item.productID.productName) { %>
                                                <div class="d-flex flex-column align-items-center">
                                                    <p class="mb-0"><%= item.productID.productName %></p>
                                                </div>
                                            <% } %>
                                        <% }); %>
                                    </td>
                                    <td class="quantity__item">
                                        <%= order.orderDate.toLocaleDateString() %>
                                    </td>
                                    <td><%= order.orderStatus %></td>
                                    <td>â‚¹<%= order.totalAmount %></td>
                                    <td><%= order.paymentMethod %></td>
                                    <td>
                                        <div class="d-flex justify-content-center align-items-center">
                                            <a href="/order-details?id=<%= order._id %>">
                                                <button class="btn btn-dark">View Details</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                     
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center text-primary pt-5 pb-5">
                                    <h3>No ordered products found.</h3>
                                    <div class="d-flex justify-content-center align-items-center mt-3">
                                        <a href="/shop">
                                            <button class="btn primary-btn" style="color: white;"> Shop now !</button>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                            <% } %>
                </table>
            </div>
        </div>
